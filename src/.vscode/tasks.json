{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe kompiluj aktywny plik",
            // "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/showing.cpp",
                "${workspaceFolder}/cinema.cpp",
                "${workspaceFolder}/day.cpp",
                "${workspaceFolder}/register.cpp",
                "${workspaceFolder}/schedule.cpp",
                "${workspaceFolder}/simlog.cpp",
                "${workspaceFolder}/worker.cpp",
                "${workspaceFolder}/workplace.cpp",
                "${workspaceFolder}/random_movies.cpp",
                "${workspaceFolder}/screening_room.cpp",
                "${workspaceFolder}/movie.cpp",
                "${workspaceFolder}/data.cpp",
                "${workspaceFolder}/time.cpp",
                "-o",
                "${workspaceFolder}/${workspaceFolderBasename}",
                "-Wall",
                "-Werror"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Zadanie wygenerowane przez debuger."
        }
    ],
    "version": "2.0.0"
}
